function palindrome(str) {
 var re = /[^A-Za-z0-9]/g;
 str = str.toLowerCase().replace(re, '');
 var newstr="";
 for (let i =str.length-1;i>=0;i--) {
 			newstr+=str[i];
   }
   if(newstr==str){
 		console.log("palindrom");
 }
 else
 			console.log("its not a palindrom");
}
palindrome("MAA,..77.M");
